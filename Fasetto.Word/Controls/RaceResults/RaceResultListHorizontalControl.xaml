							Foreground="{StaticResource ForegroundLightBrush}"
							Text="{Binding Race.Fifth.Greyhound.Name}"
							ToolTip="Greyhound" />
					</Button>

				</StackPanel>

			</DataTemplate>
			<DataTemplate x:Key="SixthPosition">
				<StackPanel Margin="2,0" Orientation="Horizontal">
					<!--  Trap Image  -->
					<materialDesign:Card
						Grid.Row="0"
						Grid.RowSpan="2"
						Grid.Column="1"
						MaxWidth="23"
						Margin="1"
						ToolTip="Trap"
						UniformCornerRadius="5">
						<Image Source="{Binding Race.Sixth.Trap, Converter={local:TrapToImageSourceConvertor}}" />
					</materialDesign:Card>

					<!--  Greyhound Name  -->
					<Button
						Command="{Binding OpenGreyhoundProfileCommand}"
						CommandParameter="{Binding Race.Sixth.Greyhound}"
						Style="{StaticResource MaterialDesignFlatButton}">
						<TextBlock
							Padding="3"
							VerticalAlignment="Center"
							FontSize="{StaticResource FontSizeSmall}"
							Foreground="{StaticResource ForegroundLightBrush}"
							Text="{Binding Race.Sixth.Greyhound.Name}"
							ToolTip="Greyhound" />
					</Button>

				</StackPanel>

			</DataTemplate>
		</Border.Resources>

		<DockPanel>

			<!--<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">

			-->
			<!--  Race Track  -->
			<!--
                <TextBlock
                    Grid.Column="1"
                    Margin="15,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource HeaderMainBrush}"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="{Binding Name}" />

                <TextBlock
                    Grid.Column="1"
                    Margin="15,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource HeaderMainBrush}"
                    Style="{StaticResource HeaderText}"
                    Text="{Binding Date, StringFormat='dd/MM/yyyy'}" />

            </StackPanel>-->

			<DataGrid
				AutoGenerateColumns="False"
				CanUserAddRows="False"
				CanUserDeleteRows="False"
				DockPanel.Dock="Top"
				ItemsSource="{Binding Races}"
				Style="{StaticResource MaterialDesignDataGrid}">

				<DataGrid.Columns>
					<DataGridTextColumn
						Width="Auto"
						Binding="{Binding Race.Date, StringFormat='dd/MM/yyyy hh:mm'}"
						Header="Date"
						IsReadOnly="True" />
					<DataGridTextColumn
						Width="Auto"
						Binding="{Binding Race.Distance}"
						Header="Dist"
						IsReadOnly="True" />
					<DataGridTextColumn
						Width="Auto"
						Binding="{Binding Race.Grade}"
						Header="Gd"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource FirstPosition}"
						Header="1st"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource SecondPosition}"
						Header="2nd"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource ThirdPosition}"
						Header="3rd"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource ForthPosition}"
						Header="4th"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource FifthPosition}"
						Header="5th"
						IsReadOnly="True" />
					<DataGridTemplateColumn
						Width="Auto"
						CellTemplate="{StaticResource SixthPosition}"
						Header="6th"
						IsReadOnly="True" />
				</DataGrid.Columns>

			</DataGrid>

		</DockPanel>

	</Border>
</UserControl>
